{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "Github Actions dependencies",
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "groupName": "vergen",
      "matchPackageNames": [
        "/vergen/",
        "/vergen-gitcl/"
      ]
    }
  ]
}
